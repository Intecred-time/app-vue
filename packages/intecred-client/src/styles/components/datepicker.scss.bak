.el-date {
  &-picker {
    &__header {
      &-label {
        color: $--color-gray-7 !important;
        font-weight: 700 !important;
        font-size: 16px !important;
      }

      .el-picker {
        &-panel__icon-btn {
          color: $--color-gray-6;
        }
      }
    }

    .el-date-table td {
      color: $--color-gray-7;
    }
  }

  &-range-picker {
    &__header {
      div {
        color: $--color-gray-7 !important;
        font-weight: 700 !important;
        font-size: 16px !important;
      }

      .el-picker {
        &-panel__icon-btn {
          color: $--color-gray-6;
        }
      }
    }

    .el-date-table td {
      color: $--color-gray-7;
    }
  }

  &-editor {
    border: 1px solid $--color-gray-5 !important;
    width: 100% !important;

    .el-range {
      &-separator {
        display: flex !important;
        align-items: center !important;
        color: $--color-gray-7 !important;
      }

      &__icon,
      &-input::placeholder {
        color: $--color-gray-6 !important;
      }
    }
  }
}
