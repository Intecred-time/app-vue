.el-select {
  width: 100%;

  &-dropdown {
    border: 1px solid $--color-gray-5 !important;
    margin: 4px 0 !important;
    box-shadow: 0 3px 4px rgba($--color-gray-7, .15) !important;
    border-radius: 4px;

    .popper__arrow {
      display: none !important;
    }

    &__list {
      padding: 0 !important;
      border-radius: 4px;
    }

    &__item {
      color: $--color-gray-7 !important;
      height: 100% !important;
      padding: 14px 16px !important;
      display: flex;
      align-items: center;
      justify-content: space-between;
      align-items: center;
      padding: 16px 16px 12px 16px !important;
      height: 100% !important;
      color: $--color-gray-7 !important;

      &.hover &:first-child,
      &.hover &:first-childs {
        border-radius: 4px;
      }

      &:not(:last-child) {
        border-bottom: 1px solid $--color-gray-3;
      }
    }

    &__empty {
      color: $--color-gray-6 !important;
      padding: 16px !important;
      text-align: left !important;
    }
  }

  &__option {
    &-link {
      display: flex;
      align-items: center;
      padding: 20px;
      border-bottom: 1px solid $--color-gray-3;

      svg path {
        fill: $--color-primary;
      }

      span {
        margin-left: 12px;
        color: $--color-primary;
        font-size: 14px;
        line-height: 20px;
      }
    }

    &-child:last-child {
      color: $--color-gray-6;
    }
  }
}
